<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="5dp"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:padding="@dimen/_8sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
                android:id="@+id/txtlinenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/action_line_number"
                android:fontFamily="@font/rock"
                android:layout_marginStart="@dimen/_10sdp" />

            <RelativeLayout
                android:id="@+id/relativeLayoutEnable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_below="@+id/txtlinenumber"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/btnchecked"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/checkbox_h_icn"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:id="@+id/txtEnable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/enable"
                    android:layout_toRightOf="@+id/btnchecked"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/robotomedium"
                    android:layout_marginStart="@dimen/_10sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayoutDisable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_below="@+id/relativeLayoutEnable"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/btnunchecked"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/checkbox_icn"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:textSize="@dimen/_12sdp"
                    android:textColor="#6f7d87"
                    android:id="@+id/txtDisable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/disable"
                    android:layout_toRightOf="@+id/btnunchecked"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/robotomedium"
                    android:layout_marginStart="@dimen/_10sdp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/btn_Done"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/done_btn"
                android:layout_below="@+id/relativeLayoutDisable"
                android:layout_centerInParent="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
