<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardBackgroundColor="#e9ebec"
    app:cardCornerRadius="@dimen/_5sdp">

    <RelativeLayout
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:id="@+id/pdflayout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/file_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/pdffile" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/linearlayoutname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_toStartOf="@+id/relativesize"
                android:layout_toEndOf="@+id/pdflayout">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotomedium" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="#616262"
                    android:id="@+id/file_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:layout_below="@+id/file_name"
                    android:fontFamily="@font/robotoregular" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_alignParentEnd="true">

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoregular" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/file_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoregular" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/options_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/linearlayoutname"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:gravity="center"
                    android:id="@+id/view"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/btn_view_pdf"
                    android:layout_marginEnd="@dimen/_5sdp" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/print"
                    android:background="@drawable/button"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="@string/action_print"
                    android:layout_weight="1" />

                <ImageView
                    android:gravity="center"
                    android:id="@+id/share"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/btn_share_pdf"
                    android:layout_marginEnd="@dimen/_5sdp" />

                <ImageView
                    android:gravity="center"
                    android:id="@+id/delete"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/btn_delete_pdf" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
