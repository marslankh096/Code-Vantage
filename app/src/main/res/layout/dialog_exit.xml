<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        app:cardBackgroundColor="@color/exit_dialog_bg_color"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:id="@+id/dialog_exit_rel_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:gravity="center_horizontal"
                android:id="@+id/dialog_exit_rel_header"
                android:background="@color/exit_dialog_header_bg_color"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp">

                <ImageView
                    android:id="@+id/dialog_exit_img_logo"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_exit_icon"
                    android:layout_centerVertical="true" />

                <TextView
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/exit_dialog_header_text_color"
                    android:id="@+id/dialog_exit_txt_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Exit"
                    android:layout_toRightOf="@+id/dialog_exit_img_logo"
                    android:layout_centerVertical="true"
                    android:textAllCaps="true"
                    android:fontFamily="@font/roboto_bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dialog_exit_message_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_below="@+id/dialog_exit_rel_header">

                <TextView
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/exit_dialog_message_text_color"
                    android:gravity="center"
                    android:id="@+id/dialog_exit_txt_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:text="Do you want to exit from app?"
                    android:layout_centerHorizontal="true"
                    android:lineSpacingExtra="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_medium" />
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:id="@+id/dialog_exit_rel_buttons"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_below="@+id/dialog_exit_message_layout">

                <RelativeLayout
                    android:id="@+id/dialog_exit_rel_continue"
                    android:background="@drawable/exit_continue_button_selector"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/exit_dialog_continue_button_text_color"
                        android:id="@+id/dialog_exit_txt_continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exit"
                        android:layout_centerInParent="true"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_medium" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dialog_exit_rel_cancel"
                    android:background="@drawable/exit_cancel_button_selector"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/dialog_exit_rel_continue">

                    <TextView
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/exit_dialog_cancel_button_text_color"
                        android:id="@+id/dialog_exit_txt_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:layout_centerInParent="true"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_medium" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
